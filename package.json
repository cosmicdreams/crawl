{
  "name": "design-token-crawler",
  "version": "1.0.0",
  "description": "A tool to crawl websites and extract design tokens",
  "engines": {
    "node": ">=23"
  },
  "type": "module",
  "main": "run.js",
  "scripts": {
    "start": "node run.js",
    "crawl": "node run.js",
    "crawl:list": "node run.js --list",
    "crawl:force": "node run.js --force",
    "crawl:yes": "node run.js -y",
    "crawl:typography": "node run.js --only typography",
    "crawl:colors": "node run.js --only colors",
    "crawl:spacing": "node run.js --only spacing",
    "crawl:borders": "node run.js --only borders",
    "crawl:animations": "node run.js --only animations",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "nuke": "node run.js --nuke",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:report": "eslint . --format html --output-file results/reports/lint-report.html"
  },
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "cli-progress": "^3.12.0",
    "commander": "^11.0.0",
    "figlet": "^1.8.0",
    "handlebars": "^4.7.8",
    "inquirer": "^12.5.2",
    "ora": "^8.2.0",
    "supports-color": "^10.0.0",
    "table": "^6.9.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@vitest/browser": "^3.1.1",
    "@vitest/coverage-v8": "^3.1.1",
    "@vitest/ui": "^3.1.1",
    "eslint": "^8.56.0",
    "eslint-formatter-html": "^2.7.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.6.9",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-vitest-globals": "^1.5.0",
    "execa": "^9.5.2",
    "vitest": "^3.1.1"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
